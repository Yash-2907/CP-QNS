//perfect number
#include<stdio.h>
int main()
{
  int n;
  printf("pls enter the number :- ");
  scanf("%d",&n);
  int i,j,sum=0;
  for(i=1;i<n;i++)
  {
    if(n%i==0)
    {
      sum=sum+i;
    }
  }
  if(sum==n)
  {
    printf("entered number is a perfect number");
  }
  else{
    printf("entered number is not a perfect number");
  }
  return 0;
}
